{
  "_comment": "CAM Cognitive Hook System v2.1.0 - NOTE: __HOME__ placeholders are automatically substituted with $HOME by cam-sync-template.sh during deployment.",
  "_cognitive_mapping": {
    "SessionStart": "ORIENT - Establish context, load memories",
    "UserPromptSubmit": "PERCEIVE - Understand intent, proactive retrieval",
    "PreToolUse": "ATTEND - Focus attention, pattern retrieval",
    "PostToolUse": "ENCODE - Store operations, create relationships",
    "PermissionRequest": "DECIDE - Evaluate permissions, record decisions",
    "SubagentStop": "INTEGRATE - Consolidate subagent results",
    "PreCompact": "HOLD - Preserve critical context",
    "SessionEnd": "REFLECT - Summarize session, consolidate knowledge",
    "Stop": "REFLECT - Handle session stop/interrupt"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/session-start.sh",
            "timeout": 60
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/prompt-cam.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash|Read|Edit|Write|Glob|Grep|Task",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/query-cam.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash|Read|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/update-cam.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/permission-request.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/subagent-stop.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/pre-compact.sh",
            "timeout": 60
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/stop.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/session-end.sh",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
